<import src="/dist/loadmore/index.wxml" />
<import src="/dist/tab/index.wxml" />

<view class="container">

  <image class="banner" src="https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1497935468391&di=9bb7eeebdd18eb3379f67d9e0f811bf2&imgtype=0&src=http%3A%2F%2Fimg.zcool.cn%2Fcommunity%2F015a645798da570000018c1bbb9eab.jpg"></image>

  <template is="zan-loadmore" data="{{loading: isLoading}}" />

  <view class="tab-wrap" wx:if="{{!isLoading}}">
    <template is="zan-tab" data="{{tab: index_tab, componentId: 'index_tab'}}"></template>
  </view>

  <view class="list">
    <view class="goods-wrap" wx:if="{{!isLoading}}" wx:key="" wx:for="{{listData.goods}}" bindtap="bindTapCase" data-article-id="{{currentCases[index].articleId}}">
      <image class="goods-img" src="{{listData.goods[index].pic}}"></image>
      <view class="text">
        <view class="title">
          <text>{{listData.goods[index].name}}</text>
        </view>
        <view class="price">
          <text class="new">￥{{listData.goods[index].currentPrice}}</text>
          <text class="old">￥{{listData.goods[index].originalPrice}}</text>
        </view>
      </view>
    </view>
  </view>

</view>